<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbarSize="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5191616">


        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/ytb_player"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:id="@+id/poster"
           />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ytb_player"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_toRightOf="@+id/imgedetail"
            android:fontFamily="cursive"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageView
            android:id="@+id/imgedetail"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/ytb_player"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/ytb_player"
            app:layout_constraintVertical_bias="0.041"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@+id/imgedetail"
            android:fontFamily="@font/arapey"

            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintHorizontal_bias="0.441" />


        <TextView
            android:id="@+id/match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgedetail"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/arapey"

            android:textColor="#00897B"
            android:textSize="27dp" />

        <TextView
            android:id="@+id/saison"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/match"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saison"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/aladin"

            android:textColor="#00897B"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtv"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="212dp"
            android:fontFamily="@font/aladin"

            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imgedetail"
            app:srcCompat="@drawable/time" />

        <TextView
            android:id="@+id/runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageView8"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/match"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/saison"

            android:textColor="@color/white" />

        <TextView
            android:id="@+id/original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_toRightOf="@+id/imgedetail"
            android:textColor="#00897B" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp" />

    </RelativeLayout>

</ScrollView>